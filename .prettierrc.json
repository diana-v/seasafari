{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "useTabs": false,
  "singleQuote": true,
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "proseWrap": "never"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "printWidth": 80,
        "tabWidth": 4
      }
    },
    {
      "files": "*.{json,babelrc,eslintrc,prettierrc}",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
